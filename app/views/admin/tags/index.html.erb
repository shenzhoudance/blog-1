<% @title = "标签列表" %>

<% content_for :actions do %>
<%= link_to new_admin_tag_path, class: 'btn btn-primary btn-large pull-right' do %>
    <%= icon_tag "plus" %> Add Tag
  <% end %>
<% end %>

<div class="sheet sheet-condensed">
  <div class="sheet-inner">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @tags.each do |tag| %>
        <tr>
          <td><%= tag.name %></td>
          <td class="actions">
            <%= link_to icon_tag("eye-open"), [:admin, tag], rel: 'tooltip', title: 'Show' %>
            <%= link_to icon_tag("pencil"), edit_admin_tag_path(tag), rel: 'tooltip', title: 'Edit' %>
            <%= link_to icon_tag("trash"), [:admin, tag], rel: 'tooltip', title: 'Delete',
                        data: { confirm: 'Are you sure?' }, method: :delete %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div><!-- /.sheet-inner -->
</div><!-- /.sheet -->
<%= paginate @tags %>

