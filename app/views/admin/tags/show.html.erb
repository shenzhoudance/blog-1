<% @title = "Showing tag" %>

<div class="form-horizontal">
  <div class="control-group">
    <label class="control-label">Name</label>
    <div class="controls">
      <span class="span6"><%= @tag.name %></span>
    </div>
  </div>
  
  <div class="form-actions">
    <%= link_to icon_tag("pencil") + ' Edit', edit_admin_tag_path(@tag), class: 'btn btn-primary' %>
    <%= link_to 'Back', admin_tags_path, class: 'btn' %>
  </div>
</div>

