<% @title = "文章列表" %>
<% content_for :actions do %>
<%= link_to new_admin_post_path, class: 'btn btn-primary btn-large pull-right' do %>
    <%= icon_tag "plus" %> 写文章
  <% end %>
<% end %>

<div class="sheet sheet-condensed">
  <div class="sheet-inner">
    <table class="table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Slug</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.slug %></td>
          <td class="actions">
            <%= link_to icon_tag("eye-open"), admin_slug_path(post.slug), rel: 'tooltip', title: 'Show' %>
            <%= link_to icon_tag("pencil"), edit_admin_post_path(post), rel: 'tooltip', title: 'Edit' %>
            <%= link_to icon_tag("trash"), [:admin, post], rel: 'tooltip', title: 'Delete',
                        data: { confirm: 'Are you sure?' }, method: :delete %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>   
  </div><!-- /.sheet-inner -->
</div><!-- /.sheet -->
<%= paginate @posts %>

