<div class="w-box-header">
  文章列表
  <div class="pull-right">
    <div class="btn-group">
      <a class="btn dropdown-toggle btn-mini" data-toggle="dropdown" href="#">
        <i class="icon-cog"></i> <span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
        <li><a href="#">Action</a></li>
        <li><a href="#">Another action</a></li>
      </ul>
    </div>
  </div>
</div>
<div class="w-box-content">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>文章标题</th>
        <th>创建时间</th>
        <th>Tags</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.created_at.strftime("%Y-%m-%d") %></td>
        <td><%=  %></td>
        <td>
          <%= link_to '查看', slug_path(post.slug), :class => 'btn btn-info' %>
          <%= link_to '编辑', edit_admin_post_path(post), :class => 'btn btn-danger' %>
          <%= link_to '删除', [:admin, post], :method => :delete, :confirm => '真的要删除吗?', :class => 'btn btn-inverse' %>
        </td>
      </tr>
      <% end %>      
    </tbody>
  </table>
</div>
