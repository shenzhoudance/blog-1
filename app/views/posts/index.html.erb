<div class="row-fluid">
  <div class="span8">
    <% @posts.each do |post| %>
    <article class="notebook audio">
       <h2><%= link_to post.title, slug_path(post.slug) %></h2><div class="triangle"></div>
         <div class="row-fluid">
           <div>
              <div class="jqDnR" id="idTextPanel">
                <%= post.context.html_safe %>
              </div>
           </div>
         </div>
         <footer>
           <div class="row-fluid">
              <span class="posted-on span4"><i class="social-calendar"></i><%= post.created_at.strftime("%Y-%m-%d") %></span>
              <div class="social span8 pull-right">
                <span class="source"><i class="social-notes"></i>Source</span>
                <span class="comment-count"><i class="social-comments"></i>0 Comments</span>
                <span class="share-on-twitter hidden-phone"><i class="social-twitter"></i>Tweet this</span>
              </div>
            </div>
          </footer>
                  
      </article>
      <% end %>
      <div class="row-fluid">
        <%= paginate @posts %>
      </div>
  </div>
  <%= render "layouts/aside" %>
</div>