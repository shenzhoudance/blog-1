<% @title = "Listing users" %>

<% content_for :actions do %>
  <%= link_to new_user_path, class: 'btn btn-primary btn-large pull-right' do %>
    <%= icon_tag "plus" %> Add User
  <% end %>
<% end %>

<div class="sheet sheet-condensed">
  <div class="sheet-inner">
    <table class="table">
      <thead>
        <tr>
          <th>Email</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td class="actions">
            <%= link_to icon_tag("eye-open"), user, rel: 'tooltip', title: 'Show' %>
            <%= link_to icon_tag("pencil"), edit_user_path(user), rel: 'tooltip', title: 'Edit' %>
            <%= link_to icon_tag("trash"), user, rel: 'tooltip', title: 'Delete',
                        data: { confirm: 'Are you sure?' }, method: :delete %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div><!-- /.sheet-inner -->
</div><!-- /.sheet -->
<%= paginate @users %>

