<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header id= "header" class="container clearfix">
    <%= link_to home_path do %>
      <img src = "/assets/logo.png" alt="SmartStart">
    <% end %>
    <nav id="main-nav">
      <ul>
        <li class='current'>
          <a href="index.html" data-description="All starts here">Home</a>
        </li>
        <li>
          <a href="index.html" data-description="All starts here">ARCHIVES</a>
        </li>
        <li>
          <a href="index.html" data-description="All starts here">DOWNLOADS</a>          	
        </li>
        <li>
          <a href="index.html" data-description="All starts here">BOOKS</a>
          	<ul>
          		<li><a href="logos-slider.html">Logos Slider</a></li>
          		<li><a href="photos-slider.html">Photos Slider</a></li>
          	</ul>
        </li>
      </ul>
    </nav>
  </header>
  
<section id="content" class="container clearfix">
  <% if notice %>
  <p class="info"><strong>Info</strong> - <%= notice %></p>
  <% end %>
  <%if alert %>
  <p class="error"><strong>Error</strong> - <%= alert %></p>
  <% end %>
  <section id='main' >
  <%= yield %>
</section>
    <aside id='sidebar'>
      <div class='widget'>
        <div class='infobox'>
          <% if user_signed_in? %>
          <h3>欢迎你,<%= current_user.name%>!</h3>
          <%= link_to '注销退出', destroy_user_session_path, :class => 'button', :method => :delete %>
          <% else %>
          <%= link_to '登录', new_user_session_path, :class => 'button' %>
          <%= link_to '注册', new_user_registration_path, :class => 'button' %>
          <% end %>
        </div>
      </div>
      <div class='widget'>
        <h6 class='widget-title'>Blog Tags</h6>
        <ul class="categories">
          <% if @tags %>
          <% @tags.each do |tag| %>
        <li>
          <a href="#"><%= tag.name %></a>
        </li>
        <% end %>
        <% end %>
      </ul>
      </div>
  
    </aside>
</section>

<footer id="footer" class="clearfix">
	<div class="container">
		<div class="three-fourth">
			<nav id="footer-nav" class="clearfix">
				<ul>
					<li>
					  <%= link_to 'HOME', home_path %>
					</li>
					<li><a href="elements.html">ARCHIVES</a></li>
					<li><a href="blog.html">DOWNLOADS</a></li>
					<li><a href="portfolio-4-columns.html">BOOKS</a></li>
					<li><a href="contact-us.html">Contact</a></li>
				</ul>				
			</nav><!-- end #footer-nav -->
			<ul class="contact-info">
				<li class="address">Beijing. China</li>
				<li class="email"><a href="mailto:lixiaolai@gmail.com">lixiaolai@gmail.com</a></li>
			</ul><!-- end .contact-info -->			
		</div><!-- end .three-fourth -->
		<div class="one-fourth last">
			<span class="title">Stay connected</span>
			<ul class="social-links">
				<li class="twitter"><a href="#">Twitter</a></li>
				<li class="facebook"><a href="#">Facebook</a></li>
				<li class="digg"><a href="#">Digg</a></li>
				<li class="vimeo"><a href="#">Vimeo</a></li>
				<li class="youtube"><a href="#">YouTube</a></li>
				<li class="skype"><a href="#">Skype</a></li>
			</ul><!-- end .social-links -->
		</div><!-- end .one-fourth.last -->		
	</div><!-- end .container -->
</footer><!-- end #footer -->
<footer id="footer-bottom" class="clearfix">
	<div class="container">
		<ul>
			<li>Blog &copy; 2013 lixiaolai.com</li>
		</ul>
	</div><!-- end .container -->
</footer><!-- end #footer-bottom -->
</body>
</html>
